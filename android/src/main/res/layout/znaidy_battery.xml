<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <ImageView
        android:id="@+id/battery_icon"
        android:layout_width="@dimen/battery_icon_size"
        android:layout_height="@dimen/battery_icon_size"
        android:src="@drawable/icon_battery_capsule_unplugged_4_size_16"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    
    <TextView
        android:id="@+id/battery_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/battery_text_size"
        android:textFontWeight="700"
        tools:text="100%"
        app:layout_constraintTop_toTopOf="@id/battery_icon"
        app:layout_constraintBottom_toBottomOf="@id/battery_icon"
        app:layout_constraintStart_toEndOf="@id/battery_icon"
        app:layout_constraintEnd_toEndOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>